{
  "info": {
    "name": "Task Manager API",
    "description": "Full API collection for Task Manager (Auth, Users, Tasks). Set `baseUrl` and optionally `token` in collection variables.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/auth/register",
            "description": "Register a new user. Copy the returned `token` into collection variable `token` for protected requests."
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": "{{baseUrl}}/auth/login",
            "description": "Login. Copy the returned `token` into collection variable `token` for protected requests."
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/users/me",
            "description": "Get current user profile. Requires auth."
          }
        },
        {
          "name": "Update Me",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\"\n}"
            },
            "url": "{{baseUrl}}/users/me",
            "description": "Update current user. All fields optional. Requires auth."
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get Tasks",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/tasks?page=1&limit=10&status=&search=",
              "host": ["{{baseUrl}}"],
              "path": ["tasks"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "status", "value": "", "description": "todo | in_progress | done" },
                { "key": "search", "value": "", "description": "Search by title" }
              ]
            },
            "description": "List tasks with optional filter, search, pagination. Requires auth."
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My new task\",\n  \"description\": \"Optional description\",\n  \"status\": \"todo\"\n}"
            },
            "url": "{{baseUrl}}/tasks",
            "description": "Create a task. Requires auth."
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated title\",\n  \"status\": \"done\"\n}"
            },
            "url": "{{baseUrl}}/tasks/:id",
            "description": "Update task by id (owner only). Replace :id with task _id. Requires auth."
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/tasks/:id",
            "description": "Delete task by id (owner only). Replace :id with task _id. Requires auth."
          }
        }
      ]
    }
  ]
}
